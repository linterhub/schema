{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$version": "0.0.0",
    "$id": "https://schema.linterhub.com/schemaver.json",
    "title": "Versioned Schema",
    "description": "The meta-schema of versioned JSON schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/schema"
        },
        {
            "$ref": "#/definitions/object"
        }
    ],
    "definitions": {
        "$version": {
            "title": "Version",
            "description": "The value of object version",
            "type": "string",
            "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
        },
        "schema": {
            "title": "JSON Schema",
            "description": "The meta-schema of JSON schema",
            "type": "object",
            "$ref": "http://json-schema.org/draft-06/schema#"
        },
        "object": {
            "title": "Versioned Object",
            "description": "The versioned object",
            "type": "object",
            "properties": {
                "$version": {
                    "title": "Version",
                    "description": "The version value",
                    "$ref": "#/definitions/$version"
                }
            },
            "required": [
                "$version"
            ]
        }
    }
}
