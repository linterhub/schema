{
    "$schema": "https://schema.linterhub.com/schemaver.json",
    "$version": "0.0.0",
    "$id": "https://schema.linterhub.com/import.json",
    "title": "Import schema",
    "description": "This schema describes package manager and set of linters",
    "type": "object",
    "allOf": [
        {
            "$ref": "./schemaver.json#/definitions/object"
        },
        {
            "$ref": "#/definitions/object"
        }
    ],
    "definitions": {
        "source": {
            "title": "Source",
            "description": "Package manager description",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Name",
                    "description": "Name of package manager",
                    "$ref": "./collection.json#/definitions/manager"
                },
                "version": {
                    "title": "Version",
                    "description": "Recommended version of package manager",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "additionalProperties": false
        },
        "linter": {
            "title": "Linter",
            "description": "This object describes linter meta-information",
            "type": "object",
            "allOf": [
                {
                    "$ref": "./linter.json#/definitions/object"
                },
                {
                    "properties": {
                        "name": {
                            "title": "Name",
                            "description": "Linter name",
                            "type": "string"
                        },
                        "version": {
                            "title": "Version",
                            "description": "Linter version",
                            "oneOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "minItems": 1,
                                    "uniqueItems": true
                                },
                                {
                                    "type": "string"
                                }
                            ]
                        }
                    }
                }
            ],
            "required": [
                "name",
                "version"
            ]
        },
        "object": {
            "properties": {
                "source": {
                    "$ref": "#/definitions/source"
                },
                "linters": {
                    "title": "Linters",
                    "description": "Array of linters with meta-information",
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/linter"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "source",
                "linters"
            ]
        }
    }
}