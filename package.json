{
  "name": "schema",
  "version": "1.0.0",
  "description": "JSON schemas for linterhub",
  "scripts": {
    "gulp": "./node_modules/gulp/bin/gulp.js",
    "eslint": "./node_modules/.bin/eslint",
    "build": "gulp build",
    "test": "gulp build && gulp test-build",
    "lint": "gulp lint",
    "import": "gulp import",
    "update": "git fetch && git rebase && git submodule update --remote --merge"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run-script test",
      "post-commit": "npm run-script update"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linterhub/schema.git"
  },
  "author": "linterhub",
  "license": "MIT",
  "homepage": "https://schema.linterhub.com",
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "fancy-log": "^1.3.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-data": "^1.3.1",
    "gulp-eslint": "^4.0.2",
    "gulp-git": "^2.7.0",
    "gulp-hub": "^0.8.0",
    "gulp-json-format": "^2.0.0",
    "gulp-json-schema": "^1.0.0",
    "gulp-jsonschema-bundle": "0.0.3",
    "husky": "^1.0.0-rc.8",
    "js-yaml": "^3.12.0",
    "jsonschema": "^1.2.4"
  },
  "bugs": {
    "url": "https://github.com/linterhub/schema/issues"
  }
}
